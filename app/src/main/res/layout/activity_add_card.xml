<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">


    <ImageView
        android:id="@+id/cancelQuestion"
        android:layout_width="107dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="372dp"
        android:layout_marginBottom="51dp"
        app:srcCompat="@drawable/ic_baseline_cancel_24"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="817dp" />

    <ImageView
        android:id="@+id/saveQuestion"
        android:layout_width="108dp"
        android:layout_height="106dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="358dp"
        android:layout_marginBottom="48dp"
        app:srcCompat="@drawable/ic_baseline_save_24"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="817dp" />

    <EditText
        android:id="@+id/QuestionLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="-1dp"
        android:hint="Question goes here!"
        android:inputType="textMultiLine"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/AnswerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="2dp"
        android:hint="Answer goes here!"
        android:inputType="textMultiLine"
        android:textSize="15sp" />


</RelativeLayout>